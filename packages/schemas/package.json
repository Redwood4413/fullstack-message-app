{
  "name": "@message-app/schemas",
  "version": "0.0.0",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@prisma/client": "^6.11.1",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/bun": "latest",
    "@types/node": "^24.1.0",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "generate": "prisma generate",
    "seed": "prisma db seed",
    "build:esm": "bun build ./index.ts --outdir ./dist/esm --target bun ",
    "build:cjs": "bun build ./index.ts --outdir ./dist/cjs --format cjs --target node --outfile=index.cjs",
    "build:types": "tsc --project tsconfig.types.json"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.13.0",
    "dotenv": "^17.2.1",
    "pg": "^8.16.3",
    "zod": "^4.0.5",
    "zod-prisma-types": "^3.2.4"
  }
}